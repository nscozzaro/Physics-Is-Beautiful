{
  "exclude": [
    "node_modules",
    "./**/*.test.ts",
    "./**/*.test.tsx",
    "./**/*.stories.tsx"
  ],
  "include": ["./src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "ES6",
    "resolveJsonModule": true,
    "jsx": "react",
    "types": ["react", "jest", "node"],
    "lib": ["es2015", "dom"],
    "outDir": "lib",
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": false,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
