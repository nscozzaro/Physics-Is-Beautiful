container_commands:
  01_updatenpmv3:
    command: PATH=$PATH:/usr/bin/ && npm update -g npm
    cwd: /usr/bin/
  02-updatenode:
    command: "curl -sL https://rpm.nodesource.com/setup_6.x | sudo -E bash - yum install nodejs --enablerepo=nodesource"
  03_npm_config:
    command: "npm config set strict-ssl false"
    leader_only: true
  04_npm_install:
    command: "npm install"
    leader_only: true
  05_webpack:
    command: "npm run prod"
    leader_only: true
  06_collectstatic:
    command: "python manage.py collectstatic --noinput"
    leader_only: true
  07_migrate:
    command: "python manage.py migrate --noinput"
    leader_only: true
